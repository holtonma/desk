      
<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
  <h4 class="modal-title" id="myModalLabel">Add Label to Case</h4>
</div>

<div id="label-modal-body" class="modal-body">
  <div class="well">
    <div>
      <p><strong>Subject:</strong> <%=@desk_case.subject %></p>
    </div>
    <div>
      <p>
        <div><strong>Existing Labels:</strong></div>
        <%= @desk_case.render_labels(@existing_labels) %>
      </p>
    </div>
  </div>
  
  <%= simple_form_for(@desk_case, :as => 'desk_case_form', :url => filter_case_path, :method => :put) do |form| %>
    <%= form.input :labels, :collection => @label_names, :value_method => :name, prompt: "Select label", input_html: { class: 'form-control'}, wrapper_html: { class: 'form-group' } %>
    <div class="modal-footer">
      <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      <%= form.submit 'Append Label', {:class=>'btn btn-success'} %>
    </div>
  <% end %>
</div>

