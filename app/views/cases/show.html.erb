      
<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
  <h4 class="modal-title" id="myModalLabel">Add Label to Case</h4>
</div>

<div id="label-modal-body" class="modal-body">
  <div class="well">
    <div>
      Subject: <%=@desk_case.subject %>
    </div>
    <div>
      Labels: 
      <% @desk_case.raw.labels.each do |label| %>
        <span class="label label-default"><%=h label %></span>
      <% end %>
    </div>
  </div>
  <%= simple_form_for(:desk_case, :url => filter_case_path, :method => :put) do |form| %>
  <%= form.input :labels, collection: @label_names, prompt: "Select label", input_html: { class: 'form-control'}, wrapper_html: { class: 'form-group' } %>
    <div class="modal-footer">
      <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      <%= form.submit 'Append Label', {:class=>'btn btn-success'} %>
    </div>
  <% end %>
</div>

